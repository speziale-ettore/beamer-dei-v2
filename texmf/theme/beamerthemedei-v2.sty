\newif\ifbeamer@insertsectiontoc

\beamer@insertsectiontocfalse

\DeclareOptionBeamer{insertsectiontoc}{\beamer@insertsectiontoctrue}
\ProcessOptionsBeamer

% The insertsectiontoc beamer option allows to automatically insert a table of
% contents before each section. The current section is highlighted, while the
% other are shaded.
\ifbeamer@insertsectiontoc
  \AtBeginSection[]
  {
    \begin{frame}{Outline}
      \tableofcontents[currentsection]
    \end{frame}
  }
\fi

